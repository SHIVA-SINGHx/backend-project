<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Product List</title>
  <link rel="stylesheet" href="../stylesheet/style.css" />
</head>
<body class="product-body">
  <div class="product-container">
    <h1 class="product-heading">All Products</h1>

    <div class="product-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" class="product-img" />
          <h2 class="product-title"><%= product.name %></h2>
          <p class="product-desc"><%= product.description %></p>
          <p class="product-price">Price: â‚¹<%= product.price %></p>
          <p class="product-discount">Discount: <%= product.discount %>%</p>
          <div class="product-actions">
            
              <div class="buy-btn">
                <a href="/admin/buy/<%= product._id %>" >Buy</a>
              </div>
              <form action="/admin/products/add-to-cart/<%= product._id %>" method="POST">
  <button class="add-to-btn" type="submit">Add to Cart</button>
</form>
             
          </div>
        </div>
      <% }) %>
    </div>

    
  </div>
</body>
</html>
